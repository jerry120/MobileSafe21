<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:itheima="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="${relativePackage}.${activityClass}" >

    <TextView
        style="@style/Style_tile"
        android:text="设置中心" />

    <com.itheima.mobilesafe21.view.SettingItemView
        android:clickable="true"
        android:id="@+id/siv_autoupdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        itheima:bgType="first"
        android:background="@drawable/ic_launcher"
        itheima:title="自动更新">
    </com.itheima.mobilesafe21.view.SettingItemView>

    <com.itheima.mobilesafe21.view.SettingItemView
        android:id="@+id/siv_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        itheima:title="归属地显示风格"
        itheima:bgType="middle">
    </com.itheima.mobilesafe21.view.SettingItemView>

    <com.itheima.mobilesafe21.view.SettingItemView
        android:id="@+id/siv_location_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        itheima:bgType="last"
        itheima:enable= "false"
        itheima:title="归属地风格显示设置" >
    </com.itheima.mobilesafe21.view.SettingItemView>

</LinearLayout>